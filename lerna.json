{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "createRelease": "github",
      "changelogPreset": "conventionalcommits",
      "message": "chore(release): %s"
    }
  },
  "ignoreChanges": ["**/*.spec.ts", "**/test/fixtures/**"],
  "version": "independent"
}
