    "clean-all": "npm run clean && rimraf node_modules",
    "fix": "xo --fix",
    "pretest": "xo",
    "test": "npx mocha",
    "test-coverage": "npm run test"
  },
  "dependencies": {
    "@node-loaders/esbuild": "^0.8.0",
    "execa": "^7.0.0"
  },
  "devDependencies": {
    "cpy-cli": "^4.2.0"
  },
  "publishConfig": {
    "access": "public"
  }
