{
  "space": true,
  "envs": ["es2020", "node", "mocha"],
  "prettier": true,
  "ignores": ["test/fixtures"],
  "printWidth": 120,
  "rules": {
    "unicorn/prefer-spread": "off",
    "unicorn/no-object-as-default-parameter": "off"
